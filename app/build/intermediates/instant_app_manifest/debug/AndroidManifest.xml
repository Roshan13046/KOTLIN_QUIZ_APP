<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flagsquizapp"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="29" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.flagsquizapp.Wonders" />
        <activity android:name="com.example.flagsquizapp.Capitals" />
        <activity android:name="com.example.flagsquizapp.Flowers" />
        <activity android:name="com.example.flagsquizapp.Spices" />
        <activity android:name="com.example.flagsquizapp.Symbols" />
        <activity android:name="com.example.flagsquizapp.Vehicles" />
        <activity android:name="com.example.flagsquizapp.Sports" />
        <activity android:name="com.example.flagsquizapp.Vegetables" />
        <activity android:name="com.example.flagsquizapp.QuizTypes" />
        <activity
            android:name="com.example.flagsquizapp.ResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="com.example.flagsquizapp.QuizQuestionAcivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.flagsquizapp.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>